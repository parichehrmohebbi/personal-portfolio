{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@src/*": ["src/*"],
      "@core/*": ["src/core/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@data/*": ["data/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "data/songs.js",
    "data/photos.js"
  ],
  "exclude": ["node_modules", "**/*.test.ts"]
}
